.layout-container
  h2 Users

  .list.mn-table-list.mn-card(ng-if='users.list.length')
    button.mn-button.action.raised(ui-sref='app.users.create'): i.zmdi.zmdi-plus
    a.mn-item(ui-sref='app.users.edit({id: user.username})' ng-repeat='user in users.list')
      span {{ :: user.firstname }} {{ :: user.lastname }}
      span {{ :: user.email }}

  .list.empty(ng-if='!users.list.length')
    .mn-card.padding.align-center
      h2 no results
      p enjoy your time :D

    .layout-row.align-end
      button.mn-button.raised(ui-sref='app.users.create') add a user


