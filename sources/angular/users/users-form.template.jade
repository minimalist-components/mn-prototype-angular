.layout-container
  h2 User

  mn-form
    .mn-card.padding.layout-column.layout-sm-row
      mn-input.flex(name='name' placeholder='Name' ng-model='users.data.name' required)
      mn-input.flex(name='email' placeholder='Email' type='email' ng-model='users.data.email' required)

    div.layout-row.align-end
      button.mn-button(ui-sref='^') Cancel
      button.mn-button.raised(type='submit') Save


